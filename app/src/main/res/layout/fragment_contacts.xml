<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contacts.ContactsFragment">

    <TextView
        android:id="@+id/text_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:text="Телефон:"/>

        <TextView
            android:id="@+id/phone_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/phone_number"
            android:text="+7 955 236 74 49"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/phone_number2"
            android:backgroundTint="#FD14D7"
            app:backgroundTint="#FFFFFF"
            app:srcCompat="@android:drawable/stat_sys_phone_call" />

        <TextView
            android:id="@+id/enter_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginTop="60dp"
            android:textSize="15sp"
            android:layout_below="@+id/phone_number"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="thisismyemail@mail.com"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:textSize="15sp"
            android:layout_below="@+id/phone_number2"
            android:layout_toRightOf="@id/enter_email"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number2"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="43dp"
            android:layout_toRightOf="@id/email"
            android:background="#FFFFFF"
            android:backgroundTint="#FD14D7"
            app:backgroundTint="#FFFFFF"
            app:srcCompat="@android:drawable/ic_dialog_email" />

    </RelativeLayout>



</LinearLayout>