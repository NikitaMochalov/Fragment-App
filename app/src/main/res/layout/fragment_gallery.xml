<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Моё обучение на факультете ИРИТ-РТФ в УрФУ началось в 2018 году."
        android:textSize="23sp"
        tools:ignore="MissingConstraints"
        android:layout_margin="30dp"/>

    <ImageView
        android:id="@+id/radiofuck"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/urfu2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Главный корпус урфу"
        android:layout_gravity="center_horizontal"
        android:textSize="19sp"
        tools:ignore="MissingConstraints"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В первые два года был большой упор на математические дисциплины: мат. анализ, дискретная математика, алгебра и геометрия. Также на первом курсе преподаватели из СКБ-Контур обучали нас основам языка C#,"
        android:textSize="23sp"
        tools:ignore="MissingConstraints"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>